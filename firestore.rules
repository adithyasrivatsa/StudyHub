rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Helper function to check if user is creating their own document
    function isCreatingOwn() {
      return isAuthenticated() && request.auth.uid == request.resource.data.userId;
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update, delete: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // Notes collection
    match /notes/{noteId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isCreatingOwn();
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Flashcards collection
    match /flashcards/{flashcardId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isCreatingOwn();
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Tasks collection
    match /tasks/{taskId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isCreatingOwn();
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Calendar events collection
    match /calendar_events/{eventId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isCreatingOwn();
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Timetables collection
    match /timetables/{entryId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isCreatingOwn();
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Semester results collection
    match /semester_results/{resultId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isCreatingOwn();
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // QR codes collection
    match /qr_codes/{qrCodeId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isCreatingOwn();
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Resumes collection
    match /resumes/{resumeId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isCreatingOwn();
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Portfolio collection
    match /portfolio/{projectId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isCreatingOwn();
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
